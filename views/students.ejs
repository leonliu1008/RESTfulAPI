<!-- Updated index.ejs with Bootstrap -->

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-B4gt1jrGC7Jh4AgTPSdUtOBvfO8sh+WyVQSHHg/hFQ"
      crossorigin="anonymous"
    />
    <style>
      body {
        font-family: "Arial", sans-serif;
        background-color: #f8f9fa;
        padding: 50px;
      }

      .container {
        background-color: rgb(161, 245, 240);
        height: 70vh;
      }

      h1 {
        color: #155724;
        font-size: 2em;
        text-align: center;
      }

      ul {
        list-style: none;
        padding: 0;
      }

      li {
        margin: 10px 0;
      }

      a {
        color: #007bff;
        text-decoration: none;
        font-weight: bold;
      }
      .newStudent {
        color: white;
        box-sizing: border-box;
        padding: 0.5rem;
        background-color: #007bff;
        border-radius: 10%;
      }

      a:hover {
        text-decoration: underline;
      }
    </style>
    <title>學生首頁</title>
  </head>
  <body>
    <div class="container">
      <h1 class="text-center mb-4">學生首頁</h1>
      <ul class="list-unstyled">
        <% studentData.forEach(student => { %>
        <li class="d-flex justify-content-between align-items-center">
          <a href="/students/<%= student._id %>" class="text-decoration-none"
            ><%= student.name %></a
          >
        </li>
        <% }) %>
        <li class="d-flex justify-content-between align-items-center">
          <a href="/students/new" class="newStudent">新增學生</a>
        </li>
      </ul>
    </div>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ho+j7jyWK8fNQe+A12HbAe5tFXjBfptQ1n2sU+KlI5bl6aXqY8Z+lgpv5Dl5Kt6Y"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
