<!-- success.ejs -->

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <style>
      body {
        font-family: "Arial", sans-serif;
        background-color: #d4edda;
        color: #155724;
        text-align: center;
        padding: 50px;
      }

      h1 {
        color: #155724;
        font-size: 2em;
      }

      img {
        width: 200px;
        border-radius: 50%;
        margin-top: 20px;
      }

      p {
        font-size: 18px;
        margin-top: 20px;
      }

      table {
        width: 60%;
        margin: 20px auto;
        border-collapse: collapse;
        background-color: #fff;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
      }

      th,
      td {
        padding: 15px;
        text-align: left;
        border-bottom: 1px solid #ddd;
      }

      th {
        background-color: #155724;
        color: #fff;
      }

      tr:hover {
        background-color: #f5f5f5;
      }

      a {
        color: #007bff;
        text-decoration: none;
        font-weight: bold;
      }

      a:hover {
        text-decoration: underline;
      }
    </style>
    <title>更新成功</title>
  </head>
  <body>
    <h1>成功更新資料</h1>
    <img src="https://placekitten.com/200/200" alt="Happy Kitten" />
    <p>以下為成功更新的資料</p>
    <table>
      <tr>
        <td>學生ID</td>
        <td><%= newData._id %></td>
      </tr>
      <tr>
        <td>姓名</td>
        <td><%= newData.name %></td>
      </tr>
      <tr>
        <td>年齡</td>
        <td><%= newData.age %></td>
      </tr>
      <tr>
        <td>主修</td>
        <td><%= newData.major %></td>
      </tr>
      <tr>
        <td>獎學金</td>
        <td><%= newData.scholarship.merit %></td>
      </tr>
      <tr>
        <td>其他獎學金</td>
        <td><%= newData.scholarship.other %></td>
      </tr>
    </table>
    <p>返回 <a href="/students">學生列表</a>。</p>
  </body>
</html>
